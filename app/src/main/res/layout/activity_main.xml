<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ranad_000.fitness_app.MainActivity">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <ImageButton
            android:id="@+id/nutritionButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="nutritionActivity"
            android:src="@drawable/nutritionicon"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="21dp" />

        <ImageButton
            android:id="@+id/workoutButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/nutritionButton"
            android:layout_alignLeft="@+id/nutritionButton"
            android:layout_alignStart="@+id/nutritionButton"
            android:layout_marginBottom="20dp"
            android:onClick="workoutActivity"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/weighticon" />

        <ImageButton
            android:id="@+id/healthButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="myClick"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:src="@drawable/weightloseicon"
            android:layout_alignBottom="@+id/nutritionButton"
            android:layout_toRightOf="@+id/nutritionButton"
             />

        <ImageButton
            android:id="@+id/scaleButton4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/weightscale"
            android:layout_alignTop="@+id/workoutButton"
            android:layout_toRightOf="@+id/workoutButton"
            android:layout_toEndOf="@+id/workoutButton" />

        <ImageView
            android:id="@+id/logo_main_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/active_elite_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/workoutButton" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
