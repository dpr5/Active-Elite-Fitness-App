<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.ranad_000.fitness_app.Activities.MainActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
>

        <ImageView
            android:id="@+id/logo_main_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/active_elite_logo"
            android:layout_marginBottom="27dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Active Elite Fitness"
            android:textColor="@color/logo_lightblue"
            android:textSize="30dp"
            android:textStyle="bold|italic"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/workout_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:onClick="nutritionActivity"
            android:src="@drawable/shoulder_image" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nutrition_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:clickable="true"
            android:onClick="workoutActivity"
            android:src="@drawable/keto_diet_image"
            android:layout_alignTop="@+id/workout_button"
            android:layout_toRightOf="@+id/workout_button"
            android:layout_toEndOf="@+id/workout_button"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" />


    </RelativeLayout>

</RelativeLayout>
