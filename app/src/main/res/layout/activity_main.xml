<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.ranad_000.fitness_app.Activities.MainActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/header_group">


        <ImageView
            android:id="@+id/logo_main_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="27dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/active_elite_logo" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Active Elite Fitness"
            android:textColor="@color/logo_lightblue"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/header_text"
            android:layout_toRightOf="@+id/header_text"
            android:clickable="true"
            android:src="@drawable/twitter_icon" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header_group"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/workout_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:onClick="workoutActivity"
                android:src="@drawable/shoulder_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nutrition_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignTop="@+id/workout_button"
                android:layout_marginRight="33dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/workout_button"
                android:layout_toRightOf="@+id/workout_button"
                android:clickable="true"
                android:onClick="nutritionActivity"
                android:src="@drawable/keto_diet_image" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/workout_plan_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignLeft="@+id/workout_button"
                android:layout_alignStart="@+id/workout_button"
                android:layout_below="@+id/workout_button"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="27dp"
                android:clickable="true"
                android:onClick="workoutPlans"
                android:src="@drawable/runner" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
